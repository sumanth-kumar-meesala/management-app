<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="au.com.management">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".ManagementApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activites.AddUserActivity">
        </activity>
        <activity android:name=".activites.AnswerActivity">
        </activity>
        <activity android:name=".activites.TeacherActivity">
        </activity>
        <activity android:name=".activites.AdminActivity">
        </activity>
        <activity android:name=".activites.ManagementActivity">
        </activity>
        <activity android:name=".activites.StudentActivity">
        </activity>
        <activity android:theme="@style/AppTheme.Fullscreen" android:name=".activites.RegisterActivity">
        </activity>
        <activity android:name=".activites.MainActivity">
        </activity>
        <activity android:name=".activites.LoginActivity"
                  android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>